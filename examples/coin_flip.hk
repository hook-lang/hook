import { round, random } from math;

fn coin_flip(times) {
  mut heads = 0;
  mut tails = 0;
  for (mut i = 0; i < times; i++) {
    let n = round(random() * 1);
    if (n == 0)
      heads++;
    else
      tails++;
  }
  println("heads: " + to_string(heads));
  println("tails: " + to_string(tails));
}

coin_flip(10);
