// quick_sort.hook
//

fn sort(mut arr) {
  val n = len(arr);
  if (n <= 1)
    return arr;
  val pivot = arr[0];
  mut left = []; 
  mut right = [];
  for (mut i = 1; i < n; i++) {
    if (arr[i] < pivot)
      left[] = arr[i];
    else
      right[] = arr[i];
  }
  arr = sort(left);
  arr[] = pivot;
  arr += sort(right);
  return arr;
}

println(sort([5, 2, 7, 3, 0, 1, 4, 6]));
